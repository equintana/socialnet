<!-- welcome -->
<div class="row">
  <div class="col-lg-12">
    <div class="page-header">
      <h2>Welcome back, <%= current_user.name.split.map(&:capitalize).join(' ') %></h2>
    </div>
  </div>
</div>

<!-- little profile + messages -->
<div class="row">
  <!--messages-->
  <div class="col-lg-8 col-lg-offset-2">

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Timeline</h3>
      </div>
      <div class="panel-body">

      <div class="well" id="write_tweet">
        <h4>Write a new Tweet</h4>
        <%= form_for @tweet, :html => { :class => 'form-horizontal' }, remote: true do |f| %>
          <div class="form-group">
            <div class="controls">
              <%= f.text_area :tweet, size: "50x4", :class => "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.file_field :image %>
            <%= f.hidden_field :image_cache %>
          </div>

          <div class="form-group">
            <%= f.label :remote_image_url, "paste an image URL" %>
            <%= f.text_field :remote_image_url %>
          </div>

          <div class="form-group">
            <%= f.submit nil, :class => 'btn btn-primary' %>
          </div>
        <% end %>
      </div>

      <% if @tweets %>

        <% @tweets.each do |tweet| %>

          <div class="tweet">

            <div class="well well-sm">
              <%= link_to user_path(tweet.user), :method => :get do %>
                 <%= tweet.user.name %>
              <% end %>
              &nbsp;
              <span class="badge"><%= time_ago_in_words(tweet.created_at) %></span>

              <p>
                <%= image_tag tweet.image_url(:xsmall).to_s if tweet.image_url %>
                <%= auto_link tweet.tweet %>
              </p>
              <div class="options">
                <%= link_to tweet_path(tweet) do %>
                  <i class="fa fa-eye"></i>
                <% end %>

                <%= link_to edit_tweet_path(tweet) do %>
                  <i class="fa fa-pencil"></i>
                <% end %>

                <%= link_to tweet_path(tweet), :method => :delete, :confirm => 'Are you sure?' do %>
                  <i class="fa fa-trash-o"></i>
                <% end %>
              </div>

            </div>

          </div>

        <% end %>

      <% else %>
        <div class="well well-sm">
          <p>You don't have any Tweet yet. Start writting dude!</p>
        </div>
      <% end %>

      </div>
    </div>

  </div>
</div>

