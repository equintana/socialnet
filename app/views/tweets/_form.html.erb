<% if flash[:errors] %>
<%= flash[:errors].full_messages.first %>
<% end %>
<% if flash[:notice] %>
  <p class='notice'><%= flash[:notice] %></p>
<% end %>
<div class="col-lg-6">
  <div class="well">
    <%= form_for @tweet, :html => { :class => 'form-horizontal' } do |f| %>
      <div class="form-group">
        <div class="controls">
          <%= f.text_area :tweet, size: "50x4", :class => "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.file_field :image %>
        <%= f.hidden_field :image_cache %>
      </div>

      <div class="form-group">
        <%= f.label :remote_image_url, "paste an image URL" %>
        <%= f.text_field :remote_image_url %>
      </div>

      <div class="form-group">
        <%= f.submit nil, :class => 'btn btn-primary' %>
        <%= link_to t('.cancel',
                      :default => t("helpers.links.cancel")),
                      tweets_path,
                      :class => 'btn btn-default' %>
      </div>
    <% end %>
  </div>
</div>