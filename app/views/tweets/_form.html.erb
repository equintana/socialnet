<% if flash[:errors] %>
<%= flash[:errors].full_messages.first %>
<% end %>
<% if flash[:notice] %>
  <p class='notice'><%= flash[:notice] %></p>
<% end %>
<div class="well">
  <%= form_for @tweet, :html => { :class => 'form-horizontal' } do |f| %>
    <div class="form-group" style="margin-left: 20px">
      <div class="controls">
        <%= f.text_area :tweet, size: "50x6" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.file_field :image%>
    </div>
    <div class="form-group" style="margin-left: 20px">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel',
                    :default => t("helpers.links.cancel")),
                    tweets_path,
                    :class => 'btn btn-default' %>
    </div>
  <% end %>
</div>